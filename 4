let student = prompt("Enter student name:");
let house = Math.floor(Math.random() * 4) + 1;
let result = "";

if (house === 1) result = "Gryffindor";
else if (house === 2) result = "Slytherin";
else if (house === 3) result = "Hufflepuff";
else result = "Ravenclaw";

document.write(student + ", you are " + result + "!");
